<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_above="@+id/true_button"
        android:layout_alignParentTop="true"
        android:background="@drawable/abc_list_longpressed_holo">

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AcÃ¡ va la primer pregunta, pantalla principal, y puede ir con imagen o sin imagen"
            android:layout_gravity="center"
            android:layout_weight="0.40"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_above="@+id/true_button" />

    </ScrollView>


    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btnNext"
        android:onClick="btnNext"
        android:background="@drawable/background_button_pressed_statitstic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/139"
        android:id="@+id/counter_text_view"
        android:layout_alignBottom="@+id/btnNext"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:id="@+id/false_button2"
        android:layout_above="@+id/btnNext"
        android:onClick="btnIncorrect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Incorrecta"
        android:fontFamily="sans-serif-condensed"
        android:textSize="13dp"
        android:gravity="left|center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:id="@+id/false_button1"
        android:onClick="btnIncorrect"
        android:layout_above="@+id/false_button2"
        android:layout_alignRight="@+id/false_button2"
        android:layout_alignEnd="@+id/false_button2"
        android:layout_alignLeft="@+id/false_button2"
        android:layout_alignStart="@+id/false_button2"
        android:text="Incorrecta"
        android:fontFamily="sans-serif-condensed"
        android:textSize="13dp"
        android:gravity="left|center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:id="@+id/true_button"
        android:onClick="btnCorrect"
        android:layout_above="@+id/false_button1"
        android:layout_alignRight="@+id/false_button1"
        android:layout_alignEnd="@+id/false_button1"
        android:layout_alignLeft="@+id/false_button1"
        android:layout_alignStart="@+id/false_button1"
        android:text="Correcta"
        android:fontFamily="sans-serif-condensed"
        android:textSize="13dp"
        android:gravity="left|center" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/correcto"
    android:src="@drawable/correcto"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incorrecto"
        android:src="@drawable/incorrecto"
        android:visibility="invisible"/>


</RelativeLayout>

