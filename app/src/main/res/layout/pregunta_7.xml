<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:background="@drawable/abc_list_longpressed_holo"
        android:layout_above="@+id/btnNext">



        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_7"
            android:layout_gravity="center"
            android:layout_weight="0.40"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_above="@+id/true_button" />

    </ScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pagina8"
        android:id="@+id/counter_text_view"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/true_button"
        android:layout_below="@+id/scrollView" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnNext"
        android:onClick="btnNext"
        android:background="@drawable/btn_next"
        android:layout_above="@+id/true_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnBack"
        android:onClick="btnBack"
        android:background="@drawable/btn_back"
        android:layout_above="@+id/true_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:id="@+id/false_button2"
        android:onClick="btnIncorrect"
        android:text="@string/answer_7_option_C"
        android:fontFamily="sans-serif-condensed"
        android:textSize="13dp"
        android:gravity="left|center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:id="@+id/false_button1"
        android:onClick="btnCorrect"
        android:text="@string/answer_7_option_B"
        android:fontFamily="sans-serif-condensed"
        android:textSize="13dp"
        android:gravity="left|center"
        android:layout_above="@+id/false_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:id="@+id/true_button"
        android:onClick="btnIncorrect"
        android:text="@string/answer_7_option_A"
        android:fontFamily="sans-serif-condensed"
        android:textSize="13dp"
        android:gravity="left|center"
        android:layout_above="@+id/false_button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correcto"
        android:src="@drawable/correcto"
        android:visibility="invisible"
        android:layout_alignTop="@+id/incorrecto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnNext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incorrecto"
        android:src="@drawable/incorrecto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnNext"
        android:visibility="invisible" />



</RelativeLayout>

